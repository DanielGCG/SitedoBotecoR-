<script>
async function followUser(userTag) {
  const userTagRequester = localStorage.getItem("autenticationUserTag");

  try {
    const response = await fetch('/API/forum/followuser', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ userTag, userTagRequester }),
    });

    if (!response.ok) {
      const errorData = await response.json();
      console.error('Erro ao seguir usu√°rio:', errorData.error);
      alert(`Erro: ${errorData.error}`);
      return;
    }

    const data = await response.json();
    console.log('Usu√°rio seguido com sucesso:', data);

    // Alterar bot√£o para "Unfollow"
    const button = document.getElementById('follow-button');
    if (button) {
      button.id = 'unfollow-button';
      button.textContent = 'Unfollow';
      button.setAttribute('onclick', `unfollowUser('${userTag}')`);
    }
  } catch (error) {
    console.error('Erro ao processar os dados:', error);
    alert('Ocorreu um erro ao seguir o usu√°rio. Tente novamente mais tarde.');
  }
}

