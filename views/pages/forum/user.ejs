function renderUserBox(user) {
  const userpageUserbox = document.getElementById("userpage-userbox");
  const userTagRequester = localStorage.getItem("autenticationUserTag");
  const isAuthenticatedUser = user.userTag === userTagRequester;

  // Verificar se `followersList` √© v√°lido
  const isFollowing = Array.isArray(user.followersList) && user.followersList.includes(userTagRequester);

  // Template comum para exibir informa√ß√µes do usu√°rio
  const userInfoTemplate = `
    <div class="userpage-userinfo">
