<style>
  /* Reset básico */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Estilos da navbar */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: var(--cor-marrom);
    padding: 1em;
    color: #fff;
  }

  /* Logo */
  .navbar-logo {
    display: flex;
    align-items: center;
  }

  .navbar-logo img {
    width: 40px;
    height: 40px;
    margin-right: 0.5em;
  }

  .navbar-logo span {
    font-size: 1em;
    font-weight: bold;
    cursor: url('/img/cursor-mao.png'), auto;
  }

  /* Links */
  .navbar-links {
    display: flex;
    gap: 1em;
    transition: max-height 0.35s ease-in-out;
    overflow: hidden;
    width: auto;  /* Garante que a largura seja apenas o necessário para o conteúdo */
  }

  .navbar-links a {
    color: #fff;
    text-decoration: none;
    padding: 0.5em;
    transition: background-color 0.35s;
    cursor: url('/img/cursor-mao.png'), auto;
  }

  .navbar-links a:hover {
    background-color: #ffffff34;
    border-radius: 5px;
  }

  /* Botão hambúrguer para modo mobile */
  .hamburger {
    display: none;
    font-size: 1.5em;
    cursor: url('/img/cursor-mao.png'), auto;
  }
  
  /* Responsivo */
  @media (max-width: 768px) {
    .navbar-links {
      flex-direction: column;
      width: auto; /* Garante que os links tenham o tamanho adequado */
      max-height: 0; /* Começa fechado */
    }

    .navbar-links.active {
      max-height: 500px; /* Ajuste conforme a quantidade de links */
    }

    .hamburger {
      display: block;
    }
  }

  .navbar-logo-link {
    text-decoration: none;
    color: #fff; /* Cor do texto do link */
  }

  .navbar-logo-link span {
    font-size: 1em;
  }

</style>

<body>
  <nav class="navbar">
    <div class="navbar-logo">
      <img src="/img/icon-192x192.png" alt="Logo do Site">
      <a href="/" class="navbar-logo-link"><span>Boteco do R$</span></a>
    </div>
    <div class="navbar-links" id="navbar-links">
      <a href="/minigames">Minigames</a>
      <a href="/galeria">Galeria</a>
      <a href="/cutucar">Cutucar</a>
      <a href="/watchlist">WatchList</a>
      <a href="/filmedagalera">Filme da Galera</a>
      <a href="/about">Sobre</a>
    </div>
    <div class="hamburger" onclick="toggleMenu()">
      &#9776;
    </div>
  </nav>
</body>

<script>
  function toggleMenu() {
    const links = document.getElementById("navbar-links");
    links.classList.toggle("active");
  }
</script>

